#include<stdio.h>
#include<string.h>
#include<queue>
#include<algorithm>
using namespace std;
const int maxn=1e3+11;
int vis[maxn];
int maxx=-1,ans=0,fnext[maxn],head[maxn],ver[maxn],tot;
void addedge(int x,int y) {
	fnext[++tot]=head[x];
	head[x]=tot;
	ver[tot]=y;
}
void dfs(int x) {
	//q.push(x);
	vis[x]=1;
	maxx=max(ans,maxx);
	for(int i=head[x]; i; i=fnext[i]) {
		int to=ver[i];
		if(!vis[to]){
			ans++;
			vis[to]=1;
			dfs(to);
			ans--; 
		}
	}
}
void init() {
	tot=0;
	memset(head,0,sizeof head);
	memset(vis,0,sizeof vis);
	maxx=-1,ans=0;
}
int main() {
	int n;
	while(~scanf("%d",&n)) {
		init();
		for(int i=1; i<=n-1; i++) {
			int a,b;
			scanf("%d%d",&a,&b);
			addedge(a,b);
			addedge(b,a);
		}
		dfs(1);
		printf("%d\n",maxx+(n-1-maxx)*2);
	}
}
